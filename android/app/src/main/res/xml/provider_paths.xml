<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- Bộ nhớ tạm trong app (thường dùng khi saveToPhotos=false) -->
  <cache-path name="camera_cache" path="."/>
  <external-cache-path name="camera_ext_cache" path="."/>

  <!-- Thư mục files nội bộ của app -->
  <files-path name="files" path="."/>

  <!-- Thư mục files ngoài (scoped) của app, mục Pictures -->
  <external-files-path name="pictures" path="Pictures/"/>
</paths>
